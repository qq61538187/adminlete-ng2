{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "ng2-demo"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",
        "assets/static/bootstrap/css/bootstrap.min.css",
        "assets/static/font-awesome/css/font-awesome.css",
        "assets/static/lte/css/AdminLTE.css",
        "assets/static/lte/css/skins/_all-skins.css",
        "assets/static/plugins/toastr/toastr.css",
        "assets/static/jpress/admin/css/common.css",
        "assets/static/layer/skin/layer.css"
      ],
      "scripts": [
        "assets/static/plugins/jquery/jquery-2.1.4.min.js",
        "assets/static/plugins/jquery/jquery.form.min.js",
        "assets/static/bootstrap/js/bootstrap.min.js",
        "assets/static/plugins/fastclick/fastclick.min.js",
        "assets/static/lte/js/app.js",
        "assets/static/jpress/admin/js/common.js",
        "assets/static/layer/layer.js",
        "assets/static/plugins/pace/pace.min.js",
        "assets/static/plugins/toastr/toastr.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
